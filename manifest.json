{
  "name": "Netflix Rottenizer",
  "version": "0.5",
  "manifest_version": 4,
  "description": "Overlays Rotten Tomato reviews when browsing Netflix.",
  "content_scripts": [
	{ "matches": ["http://*.netflix.com/*"], "js": ["jquery-1.7.1.min.js", "netflix_rottenizer.js"], "css": ["netflix_rottenizer.css"] }
  ],
  "permissions": [
    "http://api.rottentomatoes.com/",
    "http://www.rottentomatoes.com/"
  ],
  "icons": {
  		    "16": "icon16.png",
          "48": "icon48.png",
          "128": "icon128.png"
  }
}